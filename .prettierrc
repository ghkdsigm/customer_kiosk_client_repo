{
    // ...
    "rules": {
      "vue/html-closing-bracket-newline": ["error", {
        "singleline": "never",
        "multiline": "never"
      }],
      "vue/html-self-closing": ["error", {
        "html": {
          "void": "always",
          "normal": "never",
          "component": "always"
        },
        "svg": "always",
        "math": "always"
      }],
      "vue/comment-directive": "off",
      "vue/multi-word-component-names": "off",
      "vue/no-v-html": "off"
    }
  }